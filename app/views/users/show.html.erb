  <%# end %>

</div>
<div class="col-lg-1 spacer"></div>
<div class="col-lg-6">
  <% if @user == current_user %>
    <%= render "/statuses/form" %>
  <% elsif (current_user.all_friends).include?(@user) %>
    <%= render "/posts/form" %>
  <% end %>
  <% if @user.newsfeed %>
    <div id="newsfeed">
      <% @user.newsfeed.each do |event| %>
        <% if event.class == Post %>
          <%= render "posts/post", post:event %>
        <% elsif event.class == Status %>
          <%= render "statuses/status", status: event %>
        <% end %>
      <% end %>
    </div>
  <% end %>

</div>
