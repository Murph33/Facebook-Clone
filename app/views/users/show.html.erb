<div class="col-lg-11 show_header">
  <div id="cover_photo_area">
    <% if @user.profile.cover_photo %>
      <%= @user.profile.cover_photo %>
    <% else %>
      <div class="default_cover_photo_area">

      </div>
    <% end %>
    <%= image_tag @user.picture.url(:large), id: "cover_photo_user"  %>
    <div id="cover_photo_text">
      <%= @user.full_name %>
    </div>
    <div class="add_friend_button  background_grey inline">Add Friend</div>
    <div class="space_holder"></div>
  </div>
</div>
<div class="buffer col-lg-11 background_grey"></div>
<div class="col-lg-1"></div>
<div class="col-lg-4">
  <div id="friend_box">
    <div id="friend_box_header">
      <%= link_to "FRIENDS - #{@user.all_friends.length}", users_friends_path(@user), id: "friend_header_text" %>
    </div>
    <% 9.times do |i| %>
      <div class="col-lg-4 small_padding">
        <% if @friends[i] %>
          <%= link_to @friends[i] do %>
            <%= image_tag @friends[i].picture.url(:medium) %>
            <div class="name_absolute">
              <%= @friends[i].full_name %>
            </div>
          <% end %>
        <% end %>
      </div>
      <% if [2,5].include? i %>
        <div class="col-lg-12 grey" style="height: 3px"></div>
      <% end %>
    <% end %>
  </div>
  <div id="photo_box">
    <div id="photo_box_header">
      <%= link_to "PHOTOS - #{@user.photos.length}", user_photos_path(@user), id: "photo_header_text" %>
    </div>
    <% 9.times do |i| %>
      <div class="col-lg-4 small_padding">
        <% if @photos[i] %>
          <button type="button" class="no_padding" data-toggle="modal" data-target="#<%= dom_id(@photos[i]) %>">
            <%= image_tag @photos[i].image.url(:square) %>
          </button>

          <div class="modal fade" id="<%= dom_id(@photos[i]) %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
              <div class="modal-content">
                <div class="modal-body inline width75">
                  <%= image_tag @photos[i].image.url, class: "width100 inline" %>
                </div>
                <div class="modal-body-text">
                  <%= render "photos/photo_comment", photo: @photos[i] %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% if [2,5].include? i %>
        <div class="col-lg-12 grey"></div>
      <% end %>
      </div>
    <% end %>
  </div>



  <%# if current_user == @user %>
