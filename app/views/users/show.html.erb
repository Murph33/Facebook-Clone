<div class="col-lg-11 col-md-11 col-sm-11 show_header">
  <div id="cover_photo_area">
    <% if @user.profile.cover_photo.url(:cover_photo) %>
      <%= image_tag @user.profile.cover_photo.url(:cover_photo) %>
    <% else %>
      <div class="default_cover_photo_area"></div>
    <% end %>
    <%= image_tag @user.picture.url(:large), id: "cover_photo_user"  %>
    <div id="cover_photo_text">
      <%= @user.full_name %>
    </div>
    <% if current_user != @user && !(current_user.all_friends.include? @user) &&
                                  (!current_user.requestees.include? @user) %>
      <%= form_for [@user, @request], id:"friend_request_button", remote: true do |f| %>
      <div class="add_friend_button  background_grey inline">
        <%= f.submit "Add Friend", class: "background_grey borderless" %>
      </div>
      <% end %>
    <% elsif current_user.requestees.include? @user %>
    <div class="add_friend_button  background_grey inline">Friend Request Sent</div>
    <% end %>
    <div class="space_holder"></div>
  </div>
</div>
<div class="buffer col-lg-11 col-md-11 col-sm-11 background_grey"></div>
<div class="col-lg-1 col-md-1 col-sm-0"></div>
<div class="col-lg-4 col-md-4 col-sm-4 hidden-xs no_padding">
  <div id="friend_box">
    <div id="friend_box_header">
      <%= link_to "FRIENDS - #{@user.all_friends.length}", users_friends_path(@user), id: "friend_header_text" %>
    </div>
    <% 9.times do |i| %>
      <div class="col-lg-4 col-md-4 col-sm-4 small_padding">
        <% if @friends[i] %>
          <%= link_to @friends[i] do %>
            <%= image_tag @friends[i].picture.url(:medium) %>
            <div class="name_absolute">
              <%= @friends[i].full_name %>
            </div>
          <% end %>
        <% end %>
      </div>
      <% if [2,5].include? i %>
        <div class="col-lg-12 col-md-12 col-sm-12 grey" style="height: 3px"></div>
      <% end %>
    <% end %>
  </div>
  <div id="photo_box">
    <div id="photo_box_header">
      <%= link_to "PHOTOS - #{@user.photos.length}", user_photos_of_path(@user), id: "photo_header_text" %>
    </div>
    <% 9.times do |i| %>
      <div class="col-lg-4 col-md-4 col-sm-4 small_padding">
        <% if @photos[i] %>
          <button type="button" class="no_padding" data-toggle="modal" data-target="#<%= dom_id(@photos[i]) %>">
            <%= image_tag @photos[i].image.url(:square) %>
          </button>
          <div class="modal fade" id="<%= dom_id(@photos[i]) %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
              <div class="modal-content">
                <div class="modal-body inline width75">
                  <%= image_tag @photos[i].image.url, class: "width100 inline" %>
                </div>
                <div class="modal-body-text">
                  <%= render "photos/photo_comment", photo: @photos[i] %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% if [2,5].include? i %>
        <div class="col-lg-12 col-md-12 col-sm-12 grey" style="height: 3px"></div>
      <% end %>
      </div>
    <% end %>
  </div>



