

<div class="col-lg-11 show_header">
  <div id="cover_photo_area">
    <% if @user.profile.cover_photo %>
      <%= @user.profile.cover_photo %>
    <% else %>
      <div class="default_cover_photo_area">

      </div>
    <% end %>
    <%= image_tag @user.picture.url(:large), id: "cover_photo_user"  %>
    <div id="cover_photo_text">
      <%= @user.full_name %>
    </div>
    <div class="space_holder"></div>
  </div>
</div>
<div class="buffer col-lg-11 background_grey"></div>
<div class="col-lg-1"></div>
<div class="col-lg-4">
  <div id="friend_box">
    <div id="friend_box_header">
      <%= link_to "FRIENDS - #{@user.all_friends.length}", users_friends_path(@user), id: "friend_header_text" %>
    </div>
    <% 9.times do |i| %>
      <div class="col-lg-4 small_padding">
        <% if @friends[i] %>
          <%= link_to @friends[i] do %>
            <%= image_tag @friends[i].picture.url(:medium) %>
            <div class="name_absolute">
              <%= @friends[i].full_name %>
            </div>
          <% end %>
        <% end %>
      <% if [2,5].include? i %>
        <div class="col-lg-12 grey"></div>
      <% end %>
      </div>
    <% end %>
  </div>
  <div id="photo_box">
    <div id="photo_box_header">
      <%= link_to "PHOTOS - #{@user.photos.length}", user_photos_path(@user), id: "photo_header_text" %>
    </div>
    <% 9.times do |i| %>
      <div class="col-lg-4 small_padding">
        <% if @photos[i] %>
          <button type="button" class="no_padding" data-toggle="modal" data-target="#<%= dom_id(@photos[i]) %>">
            <%= image_tag @photos[i].image.url(:square) %>
          </button>
          <%# link_to user_photo_path(@user,@photos[i]), style: "visibility:hidden" do %>
            <%# image_tag @photos[i].image.url(:square) %>
          <%# end %>
          <!-- Button trigger modal -->
          <!-- <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="<%= dom_id(@photos[i]) %>">
            Launch demo modal
          </button> -->

          <!-- Modal -->
          <div class="modal fade" id="<%= dom_id(@photos[i]) %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                  <%= image_tag @photos[i].image.url, class: "width100" %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>



        <% end %>
      <% if [2,5].include? i %>
        <div class="col-lg-12 grey"></div>
      <% end %>
      </div>
    <% end %>
  </div>



