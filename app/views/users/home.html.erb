<% unless current_user %>
<br><br>
<h3>Sign up for Fakebook!</h3>
  <%= render 'form' %>
<% end %>
<% if @current_user %>
  <div class="col-lg-2"></div>
  <div class="col-lg-7">



    <%= render 'statuses/form' %>

    <div id="home_feed">
      <% @statuses.each do |status| %>
        <%= render "statuses/status", status: status %>
      <% end %>
    </div>
  </div>
<% end %>
