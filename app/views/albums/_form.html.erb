<%= simple_form_for [current_user, @album], remote: true, authenticity_token: true do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <h5>Photos</h5>
  <% if @album.errors.messages.has_key?(:photos) %>
    <div class="alert alert-danger">You must add at least one photo</div>
  <% end %>

  <div id="photos">
    <%= f.simple_fields_for :photos do |p| %>
      <%= render "photo_fields", f: p %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'attach photo', f, :photos %>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
